<head>
    <title>story lines | {{#each array}}{{title}}{{/each}}</title>
    {{> main/head-block}}
    <!-- story page js script -->
    <script type="text/javascript" src="/assets/js/story-edit.js"></script>
</head>
<body class="max mx-auto">
  <header>
    {{> main/nav-menu-block}}
  </header>
  <main>
    <section class="title-container mx-auto">
      <h1 id="story-title" data-projectid={{#each array}}{{#each story}}{{project}}{{/each}}{{/each}} data-storyid={{#each array}}{{#each story}}{{id}}{{/each}}{{/each}} class="title mx-auto">{{#each array}}{{title}}{{/each}}</h1>
    </section>
    <section class="section-container mx-auto text-center">
      <p class="section-title">Title</p>
      <input id="title" class="full" type="text" value="{{#each array}}{{#each story}}{{title}}{{/each}}{{/each}}" />
      <p class="section-title">Description</p>
      <textarea id="story-description" class="full" rows="5">{{#each array}}{{#each story}}{{description}}{{/each}}{{/each}}</textarea>
      <p class="section-title">Reporter</p>
      <select id="reporter-select" class="full">
          {{#each array}}
            {{#each story}}
              {{#each reporter}}
                {{> story/user-option}}
              {{/each}}
            {{/each}}
          {{/each}}
      </select>
      <p class="section-title">Assignee</p>
      <select id="assignee-select" class="full">
          {{#each array}}
            {{#each story}}
              {{#each assignee}}
                {{> story/user-option}}
              {{/each}}
            {{/each}}
          {{/each}}
      </select>
      <p class="section-title">Estimate</p>
      <input id="estimate" class="full" type="number" value="{{#each array}}{{#each story}}{{estimate}}{{/each}}{{/each}}" />
      <p class="section-title">Status</p>
      <select id="status-select" class="full">
        {{#each array}}
          {{#each story}}
            {{#each status}}
              {{> story/status-option}}
            {{/each}}
          {{/each}}
        {{/each}}
      </select>
      <div class="row-container mx-auto text-right">
        <button type="submit" id="submit-btn" class="button mr-0">Update Story</button>
      </div>
    </section>
  </main>
</body>