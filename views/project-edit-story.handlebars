<head>
    <title>story lines | {{#each array}}{{title}}{{/each}}</title>
    {{> main/head-block}}
    <!-- story page js script -->
    <script type="text/javascript" src="/assets/js/project-edit-story.js"></script>
</head>
<body class="max mx-auto">
  <header>
    {{> main/nav-menu-block}}
  </header>
  <main>
    <section class="title-container mx-auto">
      <h1 id="project-title" data-id={{#each array}}{{id}}{{/each}} class="title mx-auto">{{#each array}}{{title}}{{/each}}</h1>
    </section>
    <!-- title, description, status, project, assignee, reporter, estimate -->
    <section class="section-container mx-auto text-center">
      <p class="section-title">Title</p>
      <input id="story-title" class="full" type="text" />
      <p class="section-title">Description</p>
      <textarea id="story-description" class="full"></textarea>
      <p class="section-title">Owner</p>
      <select id="owner-select" class="full">
          {{#each array}}
            {{#each user}}
              {{> project/add-option}}
            {{/each}}
          {{/each}}
      </select>
      <p class="section-title">Assignee</p>
      <select id="assignee-select" class="full">
          {{#each array}}
            {{#each user}}
              {{> project/add-option}}
            {{/each}}
          {{/each}}
      </select>
      <p class="section-title">Status</p>
      <select id="status-select" class="full">
        {{#each array}}
          {{#each status}}
            {{> project/add-status-option}}
          {{/each}}
        {{/each}}
      </select>
      <div class="row-container mx-auto text-right">
        <button type="submit" id="submit-btn" class="button mr-0">update story</button>
      </div>
    </section>
  </main>
</body>